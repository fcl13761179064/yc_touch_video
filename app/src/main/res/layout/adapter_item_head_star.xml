<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cs_start_head"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_star_img"
        android:layout_width="@dimen/fm_dp_75"
        android:layout_height="@dimen/fm_dp_75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/fm_CircleStyle" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/at_star_name"
        android:layout_width="@dimen/fm_dp_80"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxEms="4"
        android:maxLines="1"
        android:fontFamily="@font/yc_font"
        android:text="周杰伦你"
        android:gravity="center"
        android:textColor="@color/fm_white"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_star_img" />
</androidx.constraintlayout.widget.ConstraintLayout>