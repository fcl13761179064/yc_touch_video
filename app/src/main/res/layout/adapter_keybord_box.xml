<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cs_key_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fm_dp_33">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_keybord_letter"
        android:layout_width="@dimen/fm_dp_33"
        android:layout_height="@dimen/fm_dp_33"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/fm_bg_shape_state_press"
        android:gravity="center"
        android:text="A"
        android:fontFamily="@font/yc_font"
        android:textColor="@color/fm_white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/line"
        android:layout_width="0.5dp"
        android:layout_height="@dimen/fm_dp_10"
        android:layout_gravity="center"
        android:background="@color/fm_1AFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>