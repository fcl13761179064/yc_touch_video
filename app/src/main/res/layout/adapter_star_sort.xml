<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:id="@+id/cs_start_head"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="25dp"
    >

   <androidx.appcompat.widget.AppCompatImageView
       android:id="@+id/cover_img"
       android:layout_width="@dimen/fm_dp_83"
       android:layout_height="@dimen/fm_dp_83"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
        />

   <androidx.appcompat.widget.AppCompatTextView
       android:id="@+id/at_shor_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:text="周杰伦你"
       android:fontFamily="@font/yc_font"
       android:maxEms="5"
       android:maxLines="1"
       android:ellipsize="end"
       android:textColor="#ffffffff"
       android:textSize="13sp"
       app:layout_constraintRight_toRightOf="@+id/cover_img"
       app:layout_constraintTop_toBottomOf="@+id/cover_img"
       app:layout_constraintLeft_toLeftOf="@+id/cover_img"
       />

</androidx.constraintlayout.widget.ConstraintLayout>