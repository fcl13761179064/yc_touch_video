<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cs_start_head"
    android:layout_width="@dimen/fm_dp_152"
    android:layout_height="@dimen/fm_dp_86"
    android:layout_marginLeft="2dp"
   >


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cover_img"
        android:layout_width="@dimen/fm_dp_150"
        android:layout_height="@dimen/fm_dp_84"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintRight_toRightOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:shapeAppearanceOverlay="@style/fm_CircleStyle_5" />

    <View
        android:layout_width="@dimen/fm_dp_150"
        android:layout_height="@dimen/fm_dp_40"
        android:background="@drawable/bg_child_text"
        app:layout_constraintBottom_toBottomOf="@+id/cover_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/at_child_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fm_dp_10"
        android:text="儿童学习"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="3"
        android:shadowColor="@color/fm_cc000000"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="@font/yc_font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/fm_dp_152"
        android:layout_height="@dimen/fm_dp_86"
        android:background="@drawable/selector_child_img_selected"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>