<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ai_empty_img"
            android:layout_width="@dimen/fm_dp_60"
            android:layout_height="@dimen/fm_dp_60"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/fm_dp_30"
            android:src="@mipmap/app_all_no_data" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_empty_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空空如也"
            android:layout_marginTop="@dimen/fm_dp_8"
            app:layout_constraintTop_toBottomOf="@+id/ai_empty_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/white"
            android:textSize="10sp" />


</androidx.constraintlayout.widget.ConstraintLayout>