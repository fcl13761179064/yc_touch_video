<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#20000000">

 <androidx.appcompat.widget.AppCompatImageView
     android:id="@+id/close"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@mipmap/img_close_topping"
     android:layout_alignRight="@+id/ll_layout"
     android:layout_marginBottom="@dimen/fm_dp_15"
     android:layout_above="@+id/ll_layout"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_layout"
        android:layout_width="@dimen/fm_dp_375"
        android:layout_height="@dimen/fm_dp_230"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:background="@drawable/fm_shape_all_success_radius_15"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:ellipsize="end"
            android:maxEms="13"
            android:maxLines="1"
            android:singleLine="true"
            android:text="输了你赢了世界又如何输了"
            android:textColor="@color/white"
            android:textSize="@dimen/fm_text_size_16" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_topping"
            android:layout_width="@dimen/fm_dp_200"
            android:layout_height="33dp"
            android:layout_marginTop="@dimen/fm_dp_32.5"
            android:layout_marginBottom="@dimen/fm_dp_15"
            android:background="@drawable/fm_bg_shape_80ffffff_17"
            android:gravity="center"
            android:text="歌曲置顶"
            android:textColor="@color/white"
            android:textSize="@dimen/fm_text_size_13" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ok_right_sing"
            android:layout_width="@dimen/fm_dp_200"
            android:layout_height="33dp"
            android:layout_marginBottom="@dimen/fm_dp_50"
            android:background="@drawable/fm_bg_shape_80ffffff_17"
            android:gravity="center"
            android:text="立即唱"
            android:textColor="@color/white"
            android:textSize="@dimen/fm_text_size_13" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>