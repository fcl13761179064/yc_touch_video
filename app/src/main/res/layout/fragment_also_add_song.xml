<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cs_also_add_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/song_backgorund"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/player_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fm_dp_10.5"
        android:layout_marginTop="@dimen/fm_dp_10.5"
        android:src="@mipmap/img_player_status"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/player_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="正在播"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/player_status"
        app:layout_constraintLeft_toRightOf="@+id/player_status"
        app:layout_constraintTop_toTopOf="@+id/player_status" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs_also_add_sound"
        android:layout_width="@dimen/fm_dp_57"
        android:layout_height="22dp"
        android:background="@drawable/fm_shape_also_add_sound_10"
        app:layout_constraintBottom_toBottomOf="@+id/player_status_text"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@+id/player_status_text">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/also_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:paddingLeft="7dp"
            android:text="已点"
            android:textColor="#ffffffff"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.666" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/at_also_add_num"
            android:layout_width="@dimen/fm_dp_16"
            android:layout_height="@dimen/fm_dp_16"
            android:autoSizeTextType="uniform"
            android:background="@drawable/kg_progress_circle_header"
            android:text="0"
            android:autoSizeMaxTextSize="10sp"
            android:autoSizeMinTextSize="3sp"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/also_num"
            app:layout_constraintTop_toTopOf="@+id/also_num"
            app:layout_constraintBottom_toBottomOf="@+id/also_num"
            android:textColor="@color/fm_color_ff5128b3"
            android:textStyle="bold"
            android:textSize="10sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hot_recycleview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/fm_dp_10.5"
        android:layout_marginTop="@dimen/fm_dp_13"
        tools:itemCount="10"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_status"
        tools:listitem="@layout/adapter_also_add_sound"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

    <LinearLayout
        android:id="@+id/row_num_container"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/fm_dp_10.5"
        android:layout_marginTop="@dimen/fm_dp_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_status"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/row_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="@dimen/fm_dp_30"
        app:layout_constraintLeft_toRightOf="@+id/row_num_container"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/fm_dp_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_status"
        android:orientation="vertical" />

</androidx.constraintlayout.widget.ConstraintLayout>