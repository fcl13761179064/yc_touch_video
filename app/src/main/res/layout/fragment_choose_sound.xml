<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/fm_dp_20"
    >
    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fm_dp_26.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbt_hot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="热门歌曲"
            android:checked="true"
            android:textStyle="bold"
            android:drawablePadding="-14dp"
            android:background="@null"
            android:button="@null"
            android:drawableBottom="@drawable/selector_movie_rb_incator"
            android:textColor="@drawable/selector_movie_rb_text"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rbt_colloct"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:button="@null"
            android:gravity="center"
            android:drawablePadding="-14dp"
            android:text="歌曲收藏"
            android:textColor="@drawable/selector_movie_rb_text"
            android:drawableBottom="@drawable/selector_movie_rb_incator"
            android:textSize="15sp"  />
    </RadioGroup>


    <FrameLayout
        android:id="@+id/fl_choose_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="@dimen/fm_dp_10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg"
        app:layout_constraintBottom_toBottomOf="parent"
     />

</androidx.constraintlayout.widget.ConstraintLayout>

