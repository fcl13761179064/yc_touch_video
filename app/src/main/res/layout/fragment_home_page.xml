<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cs_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.yc.tv.main.widget.TransparentEdgeLayout
        android:id="@+id/cs_trans_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fm_dp_13"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recycleview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fm_dp_327"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.yc.tv.main.widget.TransparentEdgeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

