<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@mipmap/bg_main_right_content">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_recycleview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/fm_dp_13"
        android:layout_marginTop="@dimen/fm_dp_8"
        app:layout_constraintBottom_toTopOf="@id/bottom_opera_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:visibility="gone"
        android:id="@+id/layout_loading"
        layout="@layout/common_progress_loading" />

    <include
        android:id="@+id/bottom_opera_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/fm_dp_53"
        android:paddingLeft="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/all_recycleview"
        app:layout_constraintBottom_toBottomOf="parent"
        layout="@layout/include_common_bottom_opera_layout"
        android:layout_marginEnd="@dimen/fm_dp_10"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

