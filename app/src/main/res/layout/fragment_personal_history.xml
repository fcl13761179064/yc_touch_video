<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#231654">

    <FrameLayout
        android:id="@+id/fl_choose_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/fm_dp_20"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/rg_history" />

    <RadioGroup
        android:id="@+id/rg_history"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fm_dp_28"
        android:layout_marginStart="@dimen/fm_dp_30"
        android:layout_marginTop="@dimen/fm_dp_28"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rb_sing"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fm_dp_28"
            android:layout_marginEnd="@dimen/fm_dp_30"
            android:background="@null"
            android:button="@null"
            android:drawableBottom="@drawable/selector_movie_rb_incator"
            android:drawablePadding="-14dp"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:text="演唱历史"
            android:fontFamily="@font/yc_font"
            android:textColor="@drawable/selector_movie_rb_text"
            android:textStyle="bold" />


        <RadioButton
            android:id="@+id/rb_movie"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fm_dp_28"
            android:background="@null"
            android:button="@null"
            android:drawableBottom="@drawable/selector_movie_rb_incator"
            android:drawablePadding="-14dp"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:text="观影历史"
            android:fontFamily="@font/yc_font"
            android:textColor="@drawable/selector_movie_rb_text"
            android:textStyle="bold" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>
