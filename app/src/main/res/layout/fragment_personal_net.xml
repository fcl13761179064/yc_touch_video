<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/fm_dp_30"
    android:layout_marginTop="@dimen/fm_dp_22"
    android:orientation="vertical"
    tools:background="#231654">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs_net_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:id="@+id/view_back_wired"
            android:layout_width="@dimen/fm_dp_200"
            android:layout_height="@dimen/fm_dp_325"
            android:background="@drawable/shape_bg_personal_net"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_wired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fm_dp_10"
            android:layout_marginTop="15dp"
            android:drawableStart="@mipmap/ic_net_wired"
            android:drawablePadding="5dp"
            android:text="有线网络"
            android:textColor="#ffffffff"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/view_back_wired"
            app:layout_constraintTop_toTopOf="@id/view_back_wired" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fm_dp_10"
            android:text="自动获取IP"
            android:textColor="#99FFFFFF"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_wired"
            app:layout_constraintEnd_toEndOf="@id/view_back_wired"
            app:layout_constraintTop_toTopOf="@id/tv_wired" />

        <FrameLayout
            android:id="@+id/fl_wired_ip"
            android:layout_width="0dp"
            android:layout_height="@dimen/fm_dp_30"
            android:layout_marginStart="@dimen/fm_dp_10"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/fm_dp_10"
            android:background="@drawable/shape_bg_personal_net_wired"
            android:paddingStart="@dimen/fm_dp_10"
            android:paddingEnd="@dimen/fm_dp_10"
            app:layout_constraintEnd_toEndOf="@id/view_back_wired"
            app:layout_constraintStart_toStartOf="@id/view_back_wired"
            app:layout_constraintTop_toBottomOf="@id/tv_wired">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="IP地址"
                android:textColor="#ffffffff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_wired_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:text="未连接"
                android:textColor="#5CFFFFFF"
                android:textSize="10sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_wired_mask"
            android:layout_width="0dp"
            android:layout_height="@dimen/fm_dp_30"
            android:layout_marginStart="@dimen/fm_dp_10"
            android:layout_marginTop="@dimen/fm_dp_10"
            android:layout_marginEnd="@dimen/fm_dp_10"
            android:background="@drawable/shape_bg_personal_net_wired"
            android:paddingStart="@dimen/fm_dp_10"
            android:paddingEnd="@dimen/fm_dp_10"
            app:layout_constraintEnd_toEndOf="@id/view_back_wired"
            app:layout_constraintStart_toStartOf="@id/view_back_wired"
            app:layout_constraintTop_toBottomOf="@id/fl_wired_ip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="子网掩码"
                android:textColor="#ffffffff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_wired_mask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:text="未连接"
                android:textColor="#5CFFFFFF"
                android:textSize="10sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_wired_gateway"
            android:layout_width="0dp"
            android:layout_height="@dimen/fm_dp_30"
            android:layout_marginStart="@dimen/fm_dp_10"
            android:layout_marginTop="@dimen/fm_dp_10"
            android:layout_marginEnd="@dimen/fm_dp_10"
            android:background="@drawable/shape_bg_personal_net_wired"
            android:paddingStart="@dimen/fm_dp_10"
            android:paddingEnd="@dimen/fm_dp_10"
            app:layout_constraintEnd_toEndOf="@id/view_back_wired"
            app:layout_constraintStart_toStartOf="@id/view_back_wired"
            app:layout_constraintTop_toBottomOf="@id/fl_wired_mask">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="默认网关"
                android:textColor="#ffffffff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_wired_gateway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:text="未连接"
                android:textColor="#5CFFFFFF"
                android:textSize="10sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_wired_dns"
            android:layout_width="0dp"
            android:layout_height="@dimen/fm_dp_30"
            android:layout_marginStart="@dimen/fm_dp_10"
            android:layout_marginTop="@dimen/fm_dp_10"
            android:layout_marginEnd="@dimen/fm_dp_10"
            android:background="@drawable/shape_bg_personal_net_wired"
            android:paddingStart="@dimen/fm_dp_10"
            android:paddingEnd="@dimen/fm_dp_10"
            app:layout_constraintEnd_toEndOf="@id/view_back_wired"
            app:layout_constraintStart_toStartOf="@id/view_back_wired"
            app:layout_constraintTop_toBottomOf="@id/fl_wired_gateway">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="DNS服务器"
                android:textColor="#ffffffff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_wired_dns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:text="未连接"
                android:textColor="#5CFFFFFF"
                android:textSize="10sp" />
        </FrameLayout>

        <View
            android:id="@+id/view_back_wifi"
            android:layout_width="@dimen/fm_dp_200"
            android:layout_height="@dimen/fm_dp_325"
            android:layout_marginStart="@dimen/fm_dp_15"
            android:background="@drawable/shape_bg_personal_net"
            app:layout_constraintStart_toEndOf="@id/view_back_wired"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fm_dp_10"
            android:layout_marginTop="15dp"
            android:drawableStart="@mipmap/ic_net_wifi"
            android:drawablePadding="5dp"
            android:text="无线网络"
            android:textColor="#ffffffff"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/view_back_wifi"
            app:layout_constraintTop_toTopOf="@id/view_back_wifi" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_wifi"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/fm_dp_10"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:fadeScrollbars="false"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarSize="5dp"
            android:scrollbarThumbVertical="@drawable/fm_scrollbar_custom"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="@id/view_back_wifi"
            app:layout_constraintEnd_toEndOf="@id/view_back_wifi"
            app:layout_constraintStart_toStartOf="@id/view_back_wifi"
            app:layout_constraintTop_toBottomOf="@id/tv_wifi"
            tools:itemCount="15"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_wifi"
            tools:spanCount="5" />

        <TextView
            android:id="@+id/tv_wifi_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索中..."
            android:textColor="#ffffff"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/view_back_wifi"
            app:layout_constraintEnd_toEndOf="@id/view_back_wifi"
            app:layout_constraintStart_toStartOf="@id/view_back_wifi"
            app:layout_constraintTop_toTopOf="@id/view_back_wifi" />

        <View
            android:id="@+id/view_wifi_switch"
            android:layout_width="@dimen/fm_dp_36"
            android:layout_height="@dimen/fm_dp_20"
            android:layout_marginEnd="@dimen/fm_dp_10"
            android:background="@drawable/selector_personal_net_track"
            app:layout_constraintBottom_toBottomOf="@id/tv_wifi"
            app:layout_constraintEnd_toEndOf="@id/view_back_wifi"
            app:layout_constraintTop_toTopOf="@id/tv_wifi" />

    </androidx.constraintlayout.widget.ConstraintLayout>
-->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs_out_screen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fm_dp_50"
        android:layout_marginEnd="@dimen/fm_dp_15"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_bg_personal_about">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:text="外接显示播放"
            android:fontFamily="@font/yc_font"
            android:textColor="@color/white"
            android:textSize="@dimen/fm_text_size_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_double_screen_switch"
            android:layout_width="@dimen/fm_dp_36"
            android:layout_height="@dimen/fm_dp_20"
            android:layout_marginEnd="@dimen/fm_dp_14"
            android:background="@drawable/selector_personal_net_track"
            app:layout_constraintBottom_toBottomOf="@id/at_open_desc"
            app:layout_constraintEnd_toStartOf="@id/at_open_desc"
            app:layout_constraintTop_toTopOf="@id/at_open_desc" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/at_open_desc"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:text="开启"
            android:fontFamily="@font/yc_font"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fl_net_set"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/fm_dp_15"
        app:layout_constraintTop_toBottomOf="@+id/cs_out_screen"
        android:background="@drawable/shape_bg_personal_about"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/fm_dp_15"
            android:text="网络设置"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:textSize="@dimen/fm_text_size_13" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_gravity="end|center"
            android:layout_marginEnd="15dp"
            android:background="@drawable/fm_bg_shape_ffdc3fff_ff6836ff_12"
            android:gravity="center"
            android:text="查看详情"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

