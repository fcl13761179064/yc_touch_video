<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <CheckedTextView
        android:layout_width="@dimen/fm_dp_30"
        android:layout_height="10dp"
        android:checked="true"
        android:background="@drawable/selector_movie_rb_incator2"
        app:layout_constraintLeft_toLeftOf="@+id/at_seach_result"
        app:layout_constraintRight_toRightOf="@+id/at_seach_result"
        app:layout_constraintBottom_toBottomOf="@+id/at_seach_result" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/at_seach_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="歌星"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:fontFamily="@font/yc_font"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
      />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/star_recycleview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fm_dp_100"
        tools:itemCount="1"
        android:layout_marginTop="@dimen/fm_dp_15"
        tools:listitem="@layout/adapter_item_head_choose_song"
        app:layout_constraintTop_toBottomOf="@+id/at_seach_result"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
       />

</androidx.constraintlayout.widget.ConstraintLayout>