<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/fm_dp_10"
    >

    <com.common.framework.view.RefreshLayout
        android:id="@+id/refreshView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/fm_dp_53"
       >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hot_recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:itemCount="10"
        tools:listitem="@layout/adapter_hot_word"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
       />
    </com.common.framework.view.RefreshLayout>

    <include
        android:id="@+id/bottom_opera_layout"
        android:layout_height="@dimen/fm_dp_53"
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        layout="@layout/include_common_bottom_opera_layout"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_return_top"
        android:layout_width="@dimen/fm_dp_94"
        android:layout_height="@dimen/fm_dp_28"
        android:layout_marginTop="@dimen/fm_dp_10.5"
        android:background="@drawable/shape_common_check_page"
        android:drawableStart="@mipmap/img_return_top"
        android:gravity="center"
        android:paddingStart="@dimen/fm_dp_14"
        android:paddingEnd="@dimen/fm_dp_12"
        android:text="回到顶部"
        android:fontFamily="@font/yc_font"
        android:textColor="@color/white"
        android:textSize="@dimen/fm_text_size_11"
        android:layout_marginBottom="@dimen/fm_dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <include
        android:visibility="gone"
        android:id="@+id/layout_loading"
        layout="@layout/common_progress_loading" />

</androidx.constraintlayout.widget.ConstraintLayout>