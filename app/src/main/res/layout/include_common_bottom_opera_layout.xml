<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_pre_page"
        android:layout_width="@dimen/fm_dp_84"
        android:layout_height="@dimen/fm_dp_28"
        android:background="@drawable/shape_common_check_page"
        android:drawableStart="@mipmap/img_no_pre_page"
        android:gravity="center"
        android:paddingStart="@dimen/fm_dp_13"
        android:paddingEnd="@dimen/fm_dp_13"
        android:text="上一页"
        android:fontFamily="@font/yc_font"
        android:visibility="gone"
        android:textColor="@color/fm_33FFFFFF"
        android:textSize="@dimen/fm_text_size_11"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/fm_dp_15"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_page"
        android:layout_width="49.5dp"
        android:layout_height="@dimen/fm_dp_28"
        android:gravity="center"
        android:text="1"
        android:fontFamily="@font/yc_font"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/fm_text_size_11"
        app:layout_constraintLeft_toRightOf="@+id/tv_pre_page"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/fm_dp_15" />

    <!--android:background="@drawable/shape_common_check_page"-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_next_page"
        android:layout_width="@dimen/fm_dp_84"
        android:layout_height="@dimen/fm_dp_28"
        android:background="@drawable/shape_common_check_page"
        android:drawableEnd="@mipmap/img_next_page"
        android:gravity="center"
        android:paddingStart="@dimen/fm_dp_10"
        android:paddingEnd="@dimen/fm_dp_10"
        android:text="下一页"
        android:fontFamily="@font/yc_font"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/fm_text_size_11"
        app:layout_constraintLeft_toRightOf="@+id/tv_page"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/fm_dp_15" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_return"
        android:layout_width="@dimen/fm_dp_75"
        android:layout_height="@dimen/fm_dp_28"
        android:background="@drawable/common_ff05b1a_back_bg"
        android:drawableStart="@mipmap/img_back_common_page"
        android:gravity="center"
        android:paddingStart="@dimen/fm_dp_14"
        android:paddingEnd="@dimen/fm_dp_12"
        android:text="返回"
        android:fontFamily="@font/yc_font"
        android:textColor="@color/white"
        android:textSize="@dimen/fm_text_size_13"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/fm_dp_15"
         />
</androidx.constraintlayout.widget.ConstraintLayout>