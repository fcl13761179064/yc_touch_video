<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/rg"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginLeft="@dimen/fm_dp_20"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/home_bg"
        app:layout_constraintTop_toTopOf="@+id/home_bg">

        <CheckedTextView
            android:id="@+id/button1"
            android:layout_width="@dimen/fm_dp_72"
            android:layout_height="match_parent"
            android:background="@drawable/selector_home_page_title_bg_checked"
            android:button="@null"
            android:textStyle="bold"
            android:text="首页"
            android:fontFamily="@font/yc_font"
            android:gravity="center"
           android:textAlignment="center"
            android:textSize="@dimen/fm_dp_16"
            android:textColor="@drawable/selector_home_page_title_text_color_checked"
            />

        <CheckedTextView
            android:id="@+id/button2"
            android:layout_width="@dimen/fm_dp_72"
            android:layout_height="match_parent"
            android:background="@drawable/selector_home_page_title_bg_checked"
            android:button="@null"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="点歌"
            android:fontFamily="@font/yc_font"
            android:textSize="@dimen/fm_dp_16"
            android:textColor="@drawable/selector_home_page_title_text_color_checked"
             />

        <CheckedTextView
            android:id="@+id/button3"
            android:layout_width="@dimen/fm_dp_72"
            android:layout_height="match_parent"
            android:background="@drawable/selector_home_page_title_bg_checked"
            android:button="@null"
            android:gravity="center"
            android:fontFamily="@font/yc_font"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="歌星"
            android:textSize="@dimen/fm_dp_16"
            android:textColor="@drawable/selector_home_page_title_text_color_checked"
             />

        <CheckedTextView
            android:id="@+id/button4"
            android:layout_width="@dimen/fm_dp_72"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/selector_home_page_title_bg_checked"
            android:button="@null"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="歌单"
            android:fontFamily="@font/yc_font"
            android:textSize="@dimen/fm_dp_16"
            android:textColor="@drawable/selector_home_page_title_text_color_checked"
            />

        <CheckedTextView
            android:id="@+id/button5"
            android:layout_width="@dimen/fm_dp_72"
            android:layout_height="match_parent"
            android:background="@drawable/selector_home_page_title_bg_checked"
            android:button="@null"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="@font/yc_font"
            android:text="电影"
            android:textSize="@dimen/fm_dp_16"
            android:textColor="@drawable/selector_home_page_title_text_color_checked"
             />

        <CheckedTextView
            android:id="@+id/button6"
            android:layout_width="@dimen/fm_dp_72"
            android:layout_height="match_parent"
            android:background="@drawable/selector_home_page_title_ertong_bg_checked"
            android:button="@null"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

</merge>