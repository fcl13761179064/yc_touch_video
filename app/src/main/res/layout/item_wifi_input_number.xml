<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_gen"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fm_dp_30"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="@dimen/fm_dp_15"
    android:background="@drawable/selector_personal_net_wifi"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@mipmap/ic_wifi_collect" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4.5dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:text="CDUANG"
        android:textColor="#ffffffff"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/img_need_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:src="@mipmap/ic_wifi_need_pw" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/ic_wifi_item" />
</LinearLayout>