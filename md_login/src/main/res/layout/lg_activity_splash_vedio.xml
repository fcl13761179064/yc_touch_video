<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splash_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <VideoView
        android:id="@+id/video_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/splash_jump_over_tv"
        android:layout_width="@dimen/fm_dp_35"
        android:layout_height="@dimen/fm_dp_35"
        android:gravity="center"
        android:layout_marginEnd="15pt"
        android:layout_marginTop="15dp"
        android:text="跳过"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/fm_shape_rectangle_ffe056ff"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="@dimen/fm_text_size_10"
      />


</androidx.constraintlayout.widget.ConstraintLayout>